{
  "name": "themezer_api",
  "version": "1.0.0",
  "description": "The Api for Themezer",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore --ignore-path .eslintignore .",
    "lint-fix": "eslint --ext .js,.ts --ignore-path .gitignore --ignore-path .eslintignore . --fix",
    "deploy": "yarn && ./node_modules/rimraf/bin.js dist && tsc && cd dist && yarn --production",
    "start": "node ./dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon"
  },
  "keywords": [],
  "author": "Migushthe2nd <Migushthe2nd@users.noreply.github.com>",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.13.1",
    "consola": "^2.12.1",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-fields": "^2.0.3",
    "graphql-tag": "^2.10.3",
    "graphql-tools": "^5.0.0",
    "pg-promise": "^10.5.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "tsc && npm start",
    "ext": "ts"
  },
  "repository": "https://github.com/Migushthe2nd/ThemezerApi.git",
  "private": false
}